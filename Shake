#include <Servo.h>
Servo servo2;
bool direction = true;
/*
 * true = clockwise
 * false = counte clockwise
 */
int iterator = 0;
int selection = 0;

void setup() {
  servo2.attach(9);
  Serial.begin(9600);

}

void loop() {

  if (Serial.available()) {
    selection = Serial.read() - '0';
  }

  switch (selection) {
    case 0:

      break;

      case 2:
        if(direction){
              if(iterator > 90){
                
                direction = false;
              }
              
              iterator += 1;
              
            }else{
              
              if(iterator < 0){
                direction = true;
                
              }
              
              iterator -= 1;
            }
              servo2.write(iterator);
              delay(15);
  }
}

