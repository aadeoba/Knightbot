#include <Servo.h>
Servo servo1;
bool direction = true;
/*
 * true = clockwise
 * false = counte clockwise
 */
int iterator = 0;
int selection = 0;

void setup() {
  servo1.attach(10);
  Serial.begin(9600);

}

void loop() {

  if (Serial.available()) {
    selection = Serial.read() - '0';
  }

  switch (selection) {
    case 0:

      break;

      case 1:

        if(direction){
          if(iterator > 180){
            
            direction = false;
          }
          
          iterator += 1;
          
        }else{
          
          if(iterator < 10){
            direction = true;
            
          }
          
          iterator -= 1;
        }
          servo1.write(iterator);
          delay(15);
        break;

     
}

